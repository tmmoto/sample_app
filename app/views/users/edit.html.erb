<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'fields', :f => f  %>  <!-- :f is referring to the name of the variable inside the partial -->

  <div class="actions">
  	<%= f.submit "Update" %> 
  </div>
<% end  %>

<div>
	<%= gravatar_for @user %>
	<a href="http://gravatar.com/emails" target=_blank>change</a>  <!-- target=_blank  means open in an other tab/popup-->
</div>